{
  "name": "notemark",
  "version": "1.1.1",
  "description": "A cross-platform desktop app to manage notes where notes are just markdown files on your hard drive (you can point the app to your dropbox folder for syncing across machines).",
  "keywords": [
    "note",
    "notes",
    "markdown",
    "editor"
  ],
  "main": "index.js",
  "scripts": {
    "build": "browserify -t reactify src/App.jsx > build/bundle.js",
    "watch": "nodemon --exec npm run build -e jsx",
    "app": "electron .",
    "debug": "electron . devtools",
    "start": "npm run build && npm run app",
    "build-darwin": "npm run build && node_modules/.bin/electron-packager . --darwin --overwrite",
    "build-win32": "npm run build && node_modules/.bin/electron-packager . --win32 --overwrite",
    "build-linux": "npm run build && node_modules/.bin/electron-packager . --linux --overwrite"
  },
  "author": "jritsema",
  "license": "MIT",
  "dependencies": {
    "brace": "^0.5.0",
    "marked": "^0.3.3",
    "react": "^0.12.2",
    "react-bootstrap": "^0.14.0"
  },
  "devDependencies": {
    "browserify": "^8.1.3",
    "electron-packager": "^8.4.0",
    "electron-prebuilt": "^0.30.8",
    "reactify": "^1.0.0"
  }
}
