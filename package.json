{
  "name": "notemark",
  "version": "1.0.0",
  "description": "A cross-platform desktop app to manage notes where notes are just markdown files on your hard drive (you can point the app to your dropbox folder for syncing across machines).",
  "keywords": [
    "note",
    "notes",
    "markdown",
    "editor"
  ],  
  "main": "index.html",
  "window": {
    "title": "notemark",
    "toolbar": false,
    "frame": true,
    "width": 1280,
    "height": 750,
    "position": "center"
  },
  "scripts": {
    "build": "browserify -t reactify src/App.jsx > build/bundle.js",
    "watch": "nodemon --exec npm run build -e jsx"
  },  
  "author": "jritsema",
  "license": "MIT",
  "dependencies": {
    "brace": "^0.5.0",
    "marked": "^0.3.3",
    "react": "^0.12.2",
    "react-bootstrap": "^0.14.0"
  },
  "devDependencies": {
    "browserify": "^8.1.3",
    "reactify": "^1.0.0"
  }
}
